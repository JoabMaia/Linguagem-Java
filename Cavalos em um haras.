import java.util.Scanner;

public class TreinoAula{
	public static void main(String[] args){
		Scanner in = new Scanner(System.in);
		int quantidade, resultado;
		
		quantidade = Integer.parseInt(in.nextLine());
		
		resultado = quantidade * 4;

	    System.out.printf("Informe a quantidade de cavalos existentes no haras:\n");
	    System.out.printf("Numero de ferraduras a serem compradas: %d\n", resultado);		
}
}
